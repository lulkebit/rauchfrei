---
import "bootstrap/dist/css/bootstrap.min.css";
const { label, name } = Astro.props;
---
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text rounded-0 rounded-0 rounded-start-2" id="basic-addon1">{label}</span>
    </div>
    <input type="date" class="form-control" name={name} aria-describedby="basic-addon1" onkeydown="return false" max="3000-01-01" onfocus="this.max=new Date().toISOString().split('T')[0]" />
</div>