---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Cards/Card';
import NumberInput from '../components/Inputs/NumberInput';
import DatePicker from '../components/Inputs/DatePicker.astro';
const pageTitle = "Einstellungen";
---
<BaseLayout pageTitle={pageTitle}>
  <Card cardTitle="Konfiguration" iconClass="fa-solid fa-gears">
    <NumberInput label="Zigaretten am Tag:" placeHolder="20 Stück" name="cigsPerDay" value="" onChange="this.select();"></NumberInput>
    <NumberInput label="Zigaretten pro Packung" placeHolder="25 Stück" name="cigsPerPack" value="" onChange="this.select();"></NumberInput>
    <NumberInput label="Preis pro Packung (€)" placeHolder="10€" name="pricePerPack" value="" onChange="this.select();"></NumberInput>
    <DatePicker label="Zeitpunkt des Aufhörens" name="dateOfReturn"></DatePicker>
	</Card>
  <script>
    import "../scripts/settings.js";
  </script>
</BaseLayout>